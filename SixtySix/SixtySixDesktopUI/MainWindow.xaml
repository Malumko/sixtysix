<Window xmlns:Views="clr-namespace:SixtySixDesktopUI.Views"  x:Class="SixtySixDesktopUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:viewModels="clr-namespace:SixtySixDesktopUI.ViewModels"
        
        Title="MainWindow" Height="350" Width="525">
    <Window.DataContext>
        <viewModels:CardsBoardViewModel />
    </Window.DataContext>
    <Grid>
        <!--<Views:CardsBoardView />-->
        <StackPanel DataContext="{Binding PlayerCards}">
            <!--<ItemsControl ItemsSource="{Binding}">-->
                <TextBlock Text="{Binding CardValue}" />
                <TextBlock Text="{Binding CardSuit}" />
                <Image Source="{Binding CardImageSrc}"
                       Width="100"
                       Height="200"  />
            <!--</ItemsControl>-->
        </StackPanel>
    </Grid>
</Window>
